<%- include('partials/_header') %>
<main style="margin: 1em">
  <h3>My URLs</h3>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Short URL ID</th>
        <th scope="col">Long URL</th>
        <th scope="col">Edit</th>
        <th scope="col">DELETE</th>
      </tr>
    </thead>
    <tbody>
      <% for (let shortURL in urls) { %>
      <tr>
        <td><%= shortURL %></td>
        <td><%= urls[shortURL] %></td>
        <td>
          <a href="/urls/edit/<%=shortURL%>" class="btn btn-primary">Edit</a>
        </td>
        <td>
          <form method="GET" action="/urls/delete/<%=shortURL %>">
            <button class="btn btn-outline-danger">DELETE</button>
          </form>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</main>
<%- include('partials/_footer') %>
