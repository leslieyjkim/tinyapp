<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <form class="form-inline ml-auto" method="POST" action="/login">
        <% if (username) { %> -->
        <!-- Display welcome message if username is available -->
        <span class="mr-2 text-light">Welcome, <%= username %>!</span>
        <% } else { %>
        <!-- Display input field if username is not available -->
        <input
          class="form-control mr-sm-2"
          type="text"
          placeholder="Username"
          name="username"
        />
        <button type="button" class="btn btn-outline-dark">Login</button>
        <% } %>
      </form>
    </div>
  </nav>
</header>
